
@{
    ViewData["Title"] = "Home Page ";
}

<style>
    #progressDialogModal {
        display: none !important;
    }
</style>


<style>
    #homePageContent {
    }

    #getStarted {
        background-color: #3498DB !important;
        margin-bottom: 120px;
        margin-top: 20px;
    }

    .alertnatecolor {
        padding-top: 25px;
        padding-bottom: 25px;
    }

    #textContent {
        font-size: 15px;
    }

    .homeImage {
        width: 600px;
        min-height: 200px;
        padding-top: 50px;
        padding-bottom: 50px
    }

    .titleContent {
        padding-top: 40px;
    }

